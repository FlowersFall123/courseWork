<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.PetMapper">
    <resultMap type="Pet" id="resultListUser">
        <id column="id" property="id" />
        <result column="petName" property="petName" />
        <result column="password" property="password" />
    </resultMap>

    <insert id="addPet">
        INSERT INTO pet(petName,password,species,sex,`option`,notes,time)
        VALUES (#{petName},"123",#{species},#{sex},#{option},#{notes},#{time})
    </insert>

    <select id="findById" resultType="entity.Pet">
        SELECT * FROM pet WHERE id = #{id}
    </select>

    <select id="getAllPet" resultType="entity.Pet">
        SELECT * FROM pet
    </select>
    <select id="LoginAccount" resultType="entity.Pet">
        SELECT * FROM pet WHERE petName = #{petName} AND password = #{password}
    </select>


</mapper>